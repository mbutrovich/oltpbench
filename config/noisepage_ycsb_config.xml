<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>noisepage</dbtype>
    <driver>org.postgresql.Driver</driver>
    <DBUrl>jdbc:postgresql://localhost:15721/terrier</DBUrl>
    <!-- <DBUrl>jdbc:postgresql://localhost:15721/terrier?preferQueryMode=simple</DBUrl> -->
    <username>test</username>
    <password>test</password>
    <isolation>TRANSACTION_READ_COMMITTED</isolation>
    
    <!-- Scalefactor in YCSB is *1000 the number of rows in the USERTABLE-->
    <scalefactor>1200</scalefactor>
    <!-- <loaderThreads>4</loaderThreads> -->
    
    <!-- The workload -->
    <terminals>1</terminals>
    <works>
        <work>
          <time>60</time>
          <rate>10000</rate>
          <weights>50,5,15,10,10,10</weights>
        </work>
    </works>

    <!-- YCSB Procedures declaration -->
    <transactiontypes>
        <transactiontype>
                <name>ReadRecord</name>
        </transactiontype>
        <transactiontype>
                <name>InsertRecord</name>
        </transactiontype>
        <transactiontype>
                <name>ScanRecord</name>
        </transactiontype>
        <transactiontype>
                <name>UpdateRecord</name>
        </transactiontype>
        <transactiontype>
                <name>DeleteRecord</name>
        </transactiontype>
        <transactiontype>
                <name>ReadModifyWriteRecord</name>
        </transactiontype>
    </transactiontypes>
</parameters>
